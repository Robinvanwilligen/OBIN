<h1>Contact</h1>

<%= form_for @contact do |f| %>
	<% if @contact.errors.any? %>
		<div class="error_messages">
			<h2><%=pluralize(@contact.errors.count, "error") %> prohibited this message from being saved:</h2>
			<ul>
			<% @contact.errors.full_messages.each do |msg| %>
				<li><%= msg %>
			<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :content, "Message" %><br />
		<%= f.text_area :content, :rows => 5 %>
	</div>
	<div class="actions"<%= f.submit "Stuur bericht" %></div>
<% end %>