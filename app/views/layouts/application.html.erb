<!DOCTYPE html>
<html>
<head>
	<title>Obin - Op Bezoek In Nederland</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<% if !@markers.nil? %>
		<script type="text/javascript">
			var markers = [];
			<% @markers.each do |marker| %>
				markers.push({"lng": "<%= marker[:lng] %>", "lat": "<%= marker[:lat] %>", "tit": "<%= marker[:tit] %>", "sum": "<%= marker[:sum] %>", "city": "<%= marker[:city] %>"});
				
			<% end %>	
		</script>
	<% end %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB7oO7xDa9qC-Fa9cw3ZnhV6D7qEA02t2s&sensor=true"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
</head>
	<body>
		<div id="top"></div>
		<div id="menu">
			<a href="/home/index">Home</a> | <%= link_to 'Locaties', locations_path %> | <a href="/map/index">Kaart</a> | <a href="/search/index">Zoeken</a> | <a href="/about/index">Over OBIN</a> | <a href="/contacts/new">Contact</a> | <a href="#">Partners</a></div>
		<div id="side">
			<a href="/admin">Login</a>
		</div>
		<div id="content">
			<%= yield %>
		</div>
	</body>
</html>